max-width = 430px

#query
  box-sizing: border-box
  display: block
  margin: 2.5rem auto
  border: 1px solid color-slate-gray
  padding: 0.2rem 0.5rem
  width: max-width
  text-align: center


#table-container
  margin: 2.5rem auto
  width: max-width


.table
  table-layout: fixed
  margin: 2.5rem 0
  border-right: 1px solid color-slate-gray
  border-bottom: 1px solid color-slate-gray
  width: 100%


.table th,
.table td
  border-top: 1px solid color-slate-gray
  border-left: 1px solid color-slate-gray
  padding: 0.2rem 0.4rem


.table th
  font-weight: 600


.keyword
  color: color-red


@media mq-mobile
  input#query
    width: 100%


  #table-container
    width: 100%

