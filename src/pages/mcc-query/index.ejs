<!doctype html>
<html lang='<%= lang %>'>
<%- 
  include('../../layout/head.ejs', {
    css: [
      '/css/reset.css',
      '/css/global.css',
      '/css/layout.css',
      `/css/${name}.css`,
    ]
  });
%>
<body>
  <main class="container">
    <aside class="aside">
      <%- include('../../layout/menus.ejs') %>
    </aside>

    <section class="content">
      <h1 class="title"><%= _t('title') %></h1>
      <input
        id="query"
        type="text"
        placeholder="<%= _t('placeholder') %>"
        oninput="onSearch(event)"
      />
      <!-- 表格容器 -->
      <div id="table-container"></div>
    </section>
  </main>

  <!-- 表格模板 -->
  <template id="template-table">
    <table class="table">
      <colgroup>
        <col style="width: 54px">
        <col>
        <col style="width: 58px">
      </colgroup>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
        <tr>
          <th align="center"><%= _t('code') %></th>
          <th align="center"><%= _t('name') %></th>
          <th align="center"><%= _t('rate') %></th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </template>

  <!-- 表格行模板 -->
  <template id="template-table-row">
    <tr>
      <td align="center"></td>
      <td></td>
      <td align="center"></td>
    </tr>
  </template>

  <% if (mode === 'development') { %>
  <script src="<%- ORIGIN_URL %>/<%- OUTPUT_JS_DIR %>/performance-observer.js"></script>
  <% } %>
  <!-- <script src="<%- ORIGIN_URL %>/<%- OUTPUT_JS_DIR %>/hyperscript.js"></script> -->
  <script src="<%- ORIGIN_URL %>/<%- OUTPUT_JS_DIR %>/<%- name %>.js"></script>
</body>
</html>